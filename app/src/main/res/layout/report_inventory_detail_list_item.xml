<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    style="@style/ListViewRowStyle">
	
    <ImageView
        android:id="@+id/flowImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow_back_black"
        android:contentDescription="@string/none"
        android:background="@drawable/bg_flow_out"
        android:padding="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <com.tokoku.pos.common.StdTextView
	        android:id="@+id/inventoryDate"
	        style="@style/ListViewRowInventoryNameTextStyle"/>
	   	<com.tokoku.pos.common.StdTextView
	        android:id="@+id/remarksText"
	        style="@style/ListViewRowInventoryRemarksTextStyle"/>
	   	<com.tokoku.pos.common.StdTextView
	        android:id="@+id/supplierText"
	        style="@style/ListViewRowInventorySupplierTextStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
	   	<com.tokoku.pos.common.StdTextView
	        android:id="@+id/quantityText"
	        style="@style/ListViewRowInventoryQuantityTextStyle"/>
    </LinearLayout>

</LinearLayout>